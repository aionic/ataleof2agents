# Weather-Based Clothing Advisor Agent
# Single unified image for ACA and Foundry Hosted deployments
#
# Build: docker build -f Dockerfile.agent -t weather-advisor .
# Run:   docker run -p 8088:8088 -e WEATHER_API_URL=... weather-advisor

# =============================================================================
# Stage 1: Builder - Install dependencies
# =============================================================================
FROM python:3.11-slim AS builder

WORKDIR /build

# Install uv for fast dependency resolution
RUN pip install --no-cache-dir uv

# Copy only requirements first (better layer caching)
COPY src/agent/requirements.txt .

# Create virtual environment and install dependencies
RUN uv venv /opt/venv && \
    . /opt/venv/bin/activate && \
    uv pip install --no-cache -r requirements.txt

# =============================================================================
# Stage 2: Runtime - Minimal production image
# =============================================================================
FROM python:3.11-slim AS runtime

# Labels for container registry
LABEL org.opencontainers.image.title="Weather Clothing Advisor Agent"
LABEL org.opencontainers.image.description="AI agent providing weather-based clothing recommendations"
LABEL org.opencontainers.image.version="1.0.0"
LABEL org.opencontainers.image.source="https://github.com/your-org/agentdemo"

# Install curl for health checks (minimal)
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /var/cache/apt/archives/*

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash agent
WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Copy application code
COPY --chown=agent:agent src/agent /app/agent
COPY --chown=agent:agent specs/001-weather-clothing-advisor/contracts /app/contracts

# Environment configuration
ENV PATH="/opt/venv/bin:$PATH"
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV LOG_LEVEL=INFO
ENV PORT=8088

# Switch to non-root user
USER agent

# Expose port
EXPOSE 8088

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8088/health || exit 1

# Run the agent
CMD ["python", "-m", "agent.main"]
